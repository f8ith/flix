{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "demo"
  ]
}
